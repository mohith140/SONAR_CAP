    "testResultsProcessor": "jest-sonar-reporter",
    "collectCoverageFrom": [
      "srv/**/*.js"
    ]
  },
  "dependencies": {
    "@sap/cds": "^8",
    "@sap/hana-client": "^2.25.22",
    "express": "^4"
  },
  "devDependencies": {
    "@cap-js/cds-types": "^0.10.0",
    "@cap-js/sqlite": "^1",
    "@sap/cds-dk": "^8",
    "jest": "^30.0.3",
    "jest-sonar-reporter": "^2.0.0",
    "mock-fs": "^5.5.0",
    "sonar-scanner": "^3.1.0"
  },
  "scripts": {
    "start": "cds-serve",
    "test": "jest --coverage"
  },
  "cds": {
    "build": {
      "target": "."
    },
    "hana": {
      "deploy-format": "hdbtable"
    },
    "requires": {
      "db": {
        "kind": "hana"
      }
    }
  }
