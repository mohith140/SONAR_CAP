{
  "name": "sonarcap",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "jest": {
    "coverageDirectory": "./coverage",
